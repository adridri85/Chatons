{% extends('base.html.twig') %}

{%  block main %}

    <div class="container">
        <h3 class="center-align">{{ detailId[0].name }}</h3>

        <div class="center-align">
            <img class="imgDetail" src="{{ asset('img/'~ detailId[0].filename )}}"/>
        </div>


        <p> {{ detailId[0].description }}</p>

        <h5>Price : {{ detailId[0].price }}</h5>
        <h5>Date de creation : {{ detailId[0].datecreated | date("Y-m-D") }}</h5>

        {% if is_granted('IS_AUTHENTICATED_FULLY')%}
            <div class="center-align">
                <a class="waves-light waves-effect btn" href="{{ path('panier_addCat' ,{'id' : detailId[0].id}) }}">Ajouter au panier</a>
            </div>
        {% endif %}

    </div>

{% endblock %}