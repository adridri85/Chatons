{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block main %}

    {%  for cat in list_cat %}
    <div class="row">
        <div class="col s4 m4">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{ cat.name }}</span>
                    <p>{{ cat.description }}</p>
                </div>
                <div class="card-action">
                    <a href="#">view detail</a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}
