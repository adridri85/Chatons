{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block main %}

    <div class="container">
        <input placeholder="recherche des chathons">
    </div>

    {%  for cat in list_cat %}
    <div class="divChatonList">
        <div class="col s4 m4">
            <div class="card blue-grey darken-1">
                <div class="card-image">
                    <img src="{{ asset('img/'~ cat.filename )}}"/>
                    <span class="card-title">{{ cat.name }}</span>
                </div>
                <div class="card-content white-text">
                    <p>{{ cat.description }}</p>
                </div>
                <div class="card-action">
                    <a href="{{ path('chaton_detailByid' , {'id' : cat.id }) }}">view detail</a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}
